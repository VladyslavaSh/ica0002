server {
	listen 80 default_server;
	server_name _;

	location / {
		uwsgi_pass localhost:5000;
		include uwsgi_params;
                proxy_pass http://localhost:9090;
        }

        {% if inventory_hostname in groups['grafana'] %}
        location /grafana{
                proxy_set_header Host $http_host;
                proxy_pass http://localhost:3000;
        }
        {% endif %}
}
